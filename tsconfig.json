{
  "compilerOptions": {
    "target": "es2017",                                 
    "lib": ["ES6"],                                    
    "experimentalDecorators": true,               
    "emitDecoratorMetadata": true,                
    "module": "commonjs",                            
    "rootDir": "./src",                              
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"                                  
    ],                              
    "allowJs": true,                              
    "outDir": "./dist",                               
    "removeComments": true,                      
    "esModuleInterop": true,    
    "noEmit": true,                    
    "forceConsistentCasingInFileNames": true,        
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@config/*": ["./src/config/*"],
      "@utils/*": ["./src/utils/*"],
      "@routes/*": ["./src/routes/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@services/*": ["./src/services/*"]
    }                             
  }
}
